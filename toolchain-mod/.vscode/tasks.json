{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Assemble Mod for Release",
			"type": "shell",
			"command": "../assemble-release.sh",
			"options": {
				"cwd": "./toolchain/python",
			},
			"windows": {
				"command": "..\\assemble-release.bat",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build and Push Everything",
			"type": "shell",
			"command": "../build-and-push-all.sh",
			"options": {
				"cwd": "./toolchain/python"
			},
			"windows": {
				"command": "..\\build-and-push-all.bat",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build Everything",
			"type": "shell",
			"command": "../build-all.sh",
			"options": {
				"cwd": "./toolchain/python"
			},
			"windows": {
				"command": "..\\build-all.bat",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build Scripts and Resources",
			"type": "shell",
			"command": "../build-scripts-and-resources.sh",
			"options": {
				"cwd": "./toolchain/python"
			},
			"windows": {
				"command": "..\\build-scripts-and-resources.bat",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Cleanup",
			"type": "shell",
			"command": "../cleanup.sh",
			"options": {
				"cwd": "./toolchain/python"
			},
			"windows": {
				"command": "..\\cleanup.bat",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build and Push Java",
			"type": "shell",
			"command": "../compile-java.sh",
			"options": {
				"cwd": "./toolchain/python"
			},
			"windows": {
				"command": "..\\compile-java.bat",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build and Push Native",
			"type": "shell",
			"command": "../compile-native.sh",
			"options": {
				"cwd": "./toolchain/python"
			},
			"windows": {
				"command": "..\\compile-native.bat",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Connect to ADB",
			"type": "shell",
			"command": "python3",
			"options": {
				"cwd": "./toolchain/python"
			},
			"windows": {
				"command": "python",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"args": [
				"task.py",
				"connectToADB",
				"'${input:ip}:${input:port}'"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Download Declarations",
			"type": "shell",
			"command": "../download-declarations.sh",
			"options": {
				"cwd": "./toolchain/python"
			},
			"windows": {
				"command": "..\\download-declarations.bat",
				"options": {
					"cwd": ".\\toolchain\\python"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "ip",
			"description": "IP:",
			"default": "192.168.31.74",
			"type": "promptString"
		},
		{
			"id": "port",
			"description": "Port:",
			"default": "5037",
			"type": "promptString"
		}
	]
}